<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="121dp"
            android:layout_height="125dp" app:srcCompat="?attr/actionModeShareDrawable"
            android:id="@+id/imageViewCat" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Nachtischlampe"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:id="@+id/textViewProduct" app:layout_constraintStart_toEndOf="@+id/imageViewCat"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            android:autoText="true" app:autoSizeMaxTextSize="30sp" app:autoSizeMinTextSize="15sp"
            android:textSize="20sp" tools:textColor="@android:color/black" android:layout_marginTop="24dp"
            android:fontFamily="@font/allerta"/>
</android.support.constraint.ConstraintLayout>